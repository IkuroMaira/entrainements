{
  "manifest_version": 3,
  "name": "Trap your friend",
  "version": "1.0.0",
  "description": "Trap your friend by displaying images of your friends on the interface.",
  "icons": {
    "16": "images/icons/icon-16.png",
    "32": "images/icons/icon-32.png",
    "48": "images/icons/icon-48.png",
    "128": "images/icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icons/icon-16.png",
      "32": "images/icons/icon-32.png",
      "48": "images/icons/icon-48.png",
      "128": "images/icons/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/popup.js",
        "scripts/content.js"
        ],
      "run_at": "document_end",
      "css": ["style.css"],
      "matches": [
        "https://*/",
        "https://*/*",
        "http://*/",
        "http://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": ["activeTab"],
  "web_accessible_resources": [
    {
      "resources": [ "images/cats/*" ],
      "matches": [ "https://*/*" ]
    }
  ]
}